{
    "id": "org.kde.ark",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "ark",
    "rename-icon": "ark",
    "tags": [
        "nightly"
    ],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--device=dri",
        "--filesystem=host",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.a11y.Bus"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/pkgconfig",
        "/share/app-info",
        "/share/doc",
        "/share/man"
    ],
    "modules": [
        {
            "name": "zstd",
            "buildsystem": "simple",
            "build-commands": [
                "make",
                "make PREFIX=/ DESTDIR=\"${FLATPAK_DEST}\" install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/facebook/zstd/releases/download/v1.5.7/zstd-1.5.7.tar.gz",
                    "sha256": "eb33e51f49a15e023950cd7825ca74a4a2b43db8354825ac24fc1b7ee09e6fa3",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 12083,
                        "stable-only": true,
                        "url-template": "https://github.com/facebook/zstd/releases/download/v$version/zstd-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "lz4",
            "buildsystem": "simple",
            "build-commands": [
                "make -C lib PREFIX=/",
                "make -C programs PREFIX=/usr lz4 lz4",
                "make install PREFIX=/ DESTDIR=\"${FLATPAK_DEST}\" install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/lz4/lz4/archive/v1.10.0.tar.gz",
